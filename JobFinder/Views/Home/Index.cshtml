@model SearchViewModel
@{
    ViewData["Title"] = "Search";
}


<div id="search-container">
    <section id="input-section">
        <form asp-action="Search" method="get">
            <fieldset>
                <legend>Select job boards to include</legend>

                <div>
                    <input asp-for="Adzuna" type="checkbox" />
                    <label asp-for="Adzuna"></label>
                </div>
                <div>
                    <input asp-for="Github" type="checkbox" />
                    <label asp-for="Github"></label>
                </div>
                <div>
                    <input asp-for="Jooble" type="checkbox" />
                    <label asp-for="Jooble"></label>
                </div>
                <div>
                    <input asp-for="Usajobs" type="checkbox" />
                    <label asp-for="Usajobs"></label>
                    <sup>(USA only)</sup>
                </div>
                <div>
                    <input asp-for="Reed" type="checkbox" />
                    <label asp-for="Reed"></label>
                    <sup>(UK only)</sup>
                </div>
            </fieldset>

            <fieldset>
                <legend>Enter search parameters</legend>

                <div class="searchParam">
                    <label asp-for="Country"></label><br />
                    <select asp-for="Country" asp-items="Model.Countries"></select><br />
                    <span asp-validation-for="Country" class="validationMessage"></span>
                </div>
                <div class="searchParam">
                    <label asp-for="Keywords"></label><br />
                    <input asp-for="Keywords" type="text" placeholder=".NET developer" />
                </div>
                <div class="searchParam">
                    <label asp-for="Location"></label><br />
                    <input asp-for="Location" type="text" placeholder="Tempe, AZ" />
                </div>
                <div class="searchParam">
                    <label asp-for="MilesAway"></label><br />
                    <input asp-for="MilesAway" type="number" placeholder="5" /><br />
                    <span asp-validation-for="MilesAway" class="validationMessage"></span>
                </div>
                <div class="searchParam">
                    <label asp-for="MinSalary"></label><br />
                    <input asp-for="MinSalary" type="number" placeholder="75000" /><br />
                    <span asp-validation-for="MinSalary" class="validationMessage"></span>
                </div>
                <div class="searchParam">
                    <input asp-for="FullTimeOnly" type="checkbox" />
                    <label asp-for="FullTimeOnly"></label>
                    <br />
                    <input asp-for="PermanentOnly" type="checkbox" />
                    <label asp-for="PermanentOnly"></label>
                </div>
                <div id="sort-options">
                    <label asp-for="SortBy"></label>
                    <select asp-for="SortBy" asp-items="Model.SortTypes"></select>
                </div>
                <div>
                    <label asp-for="Page"></label>
                    <input asp-for="Page" type="number" placeholder="1" /><br />
                    <span asp-validation-for="Page" class="validationMessage"></span>
                </div>
            </fieldset>

            <input type="submit" value="Search" />
        </form>
    </section>

    <section id="output-section">
        @if (Model.Results == null)
        {
            <span>Click "Search" to get started!</span>
        }
        else
        {
            if (Model.Errors.Count > 0)
            {
                <div id="search-errors">
                    There was a problem accessing the following job boards:
                    <ul>
                        @foreach (var error in Model.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            if (Model.Results.Count == 0)
            {
                <span>No jobs found :(</span>
            }
            else
            {
                <partial name="_JobListPartial" model="Model.Results" />
            }
            <span></span>
        }
    </section>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const form = $('#input-section form');
        form.submit(function (event) {
            if (form.valid()) {
                $('#output-section').html('<div class="loadingSpinner"></div>');
            }
        });
    </script>
}
